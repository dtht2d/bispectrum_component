	eprint = {2210.11343 [cond-mat, physics:physics]},
	keywords = {Condensed Matter - Disordered Systems and Neural Networks, Condensed Matter - Materials Science, Physics - Computational Physics},
	file = {[13]2210.11343.pdf:/Users/duonghoang/Documents/GitHub/bispectrum_component/docs/zotero_references/[13]2210.11343.pdf:application/pdf},
