
@article{thompson_spectral_2015,
	title = {A Spectral Analysis Method for Automated Generation of Quantum-Accurate Interatomic Potentials},
	volume = {285},
	issn = {00219991},
	url = {http://arxiv.org/abs/1409.3880},
	doi = {10.1016/j.jcp.2014.12.018},
	abstract = {We present a new interatomic potential for solids and liquids called Spectral Neighbor Analysis Potential ({SNAP}). The {SNAP} potential has a very general form and uses machine-learning techniques to reproduce the energies, forces, and stress tensors of a large set of small conﬁgurations of atoms, which are obtained using high-accuracy quantum electronic structure ({QM}) calculations. The local environment of each atom is characterized by a set of bispectrum components of the local neighbor density projected on to a basis of hyperspherical harmonics in four dimensions. The bispectrum components are the same bond-orientational order parameters employed by the {GAP} potential [1]. The {SNAP} potential, unlike {GAP}, assumes a linear relationship between atom energy and bispectrum components. The linear {SNAP} coeﬃcients are determined using weighted least-squares linear regression against the full {QM} training set. This allows the {SNAP} potential to be ﬁt in a robust, automated manner to large {QM} data sets using many bispectrum coeﬃcients.},
	pages = {316--330},
	journaltitle = {Journal of Computational Physics},
	shortjournal = {Journal of Computational Physics},
	author = {Thompson, Aidan P. and Swiler, Laura P. and Trott, Christian R. and Foiles, Stephen M. and Tucker, Garritt J.},
	urldate = {2023-06-09},
	date = {2015-03},
	langid = {english},
	eprinttype = {arxiv},
	eprint = {1409.3880 [cond-mat]},
	keywords = {Condensed Matter - Materials Science},
	file = {[1]1409.3880.pdf:/Users/duonghoang/Documents/GitHub/bispectrum_component/docs/zotero_references/[1]1409.3880.pdf:application/pdf},
}

